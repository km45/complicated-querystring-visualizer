{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "module": "commonjs",
        "newLine": "LF",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "target": "es2018"
    },
    "include": [
        "./src/ts/**/*"
    ]
}